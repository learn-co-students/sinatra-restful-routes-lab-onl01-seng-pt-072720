<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" id="hidden" value="PATCH">
    <label for="name">Name:</label>
    <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>" />
    <br>
    <label for="ingredients">Ingredients:</label>
    <input id="ingredients" type="text" name="recipe[ingredients]"  value="<%= @recipe.ingredients %>">
    <br>
    <label for="cook_time">Cook Time:</label>
    <input id="cook_time" type="text" name="recipe[cook_time]"  value="<%= @recipe.cook_time %>">
    <br>
    <input type="submit" value="Submit">
</form>