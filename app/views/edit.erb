<form method='post' action='/recipes/<%= @recipe.id %>'>
    <input id="hidden" type="hidden" name="_method" value="patch">
    Recipe Name: <input type='text' name='name' placeholder='<%= @recipe.name %>'>
    Ingredients: <input type='text' name='ingredients' placeholder='<%= @recipe.ingredients %>'>
    Cooktime: <input type='text' name='cook_time' placeholder='<%= @recipe.cook_time %>'>
    <input type="submit" value="submit">
</form>